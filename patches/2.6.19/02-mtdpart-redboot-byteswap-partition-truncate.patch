+						swab32s(&buf[j].size);
+						swab32s(&buf[j].entry_point);
+						swab32s(&buf[j].data_length);
+						swab32s(&buf[j].desc_cksum);
+						swab32s(&buf[j].file_cksum);
+					}
 				}
+			} else {
