Index: linux-2.6.16/arch/arm/mach-ixp4xx/ixdp425-pci.c
===================================================================
--- linux-2.6.16.orig/arch/arm/mach-ixp4xx/ixdp425-pci.c	2006-06-07 23:24:48.718539272 +0930
+++ linux-2.6.16/arch/arm/mach-ixp4xx/ixdp425-pci.c	2006-06-07 23:25:37.608106928 +0930
@@ -46,7 +46,8 @@
 
 	int irq = -1;
 
-	if (slot >= 1 && slot <= IXDP425_PCI_MAX_DEV && 
+	if (slot >= 1 &&
+		slot <= (machine_is_loft() ? LOFT_PCI_MAX_DEV : IXDP425_PCI_MAX_DEV) &&
 		pin >= 1 && pin <= IXDP425_PCI_IRQ_LINES) {
 		irq = pci_irq_table[(slot + pin - 2) % 4];
 	}
